<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ism_black"
    >

  <View
      android:id="@+id/vPeek"
      android:layout_margin="@dimen/ism_dp_20"
      android:layout_width="@dimen/ism_dp_80"
      android:layout_height="@dimen/ism_dp_4"
      android:layout_centerHorizontal="true"
      android:background="@drawable/ism_peek_rectangle"
      />

  <TextView
      android:id="@+id/tvMetadataHelper"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="@dimen/ism_sp_16"
      android:text="@string/ism_add_metadata_helper"
      android:textColor="@color/ism_white"
      android:layout_centerHorizontal="true"
      android:gravity="center_horizontal"
      android:layout_marginTop="@dimen/ism_dp_14"
      android:layout_marginStart="@dimen/ism_dp_44"
      android:layout_marginEnd="@dimen/ism_dp_44"
      android:layout_marginBottom="@dimen/ism_dp_2"
      android:textStyle="bold"
      android:layout_below="@+id/vPeek"
      />

  <androidx.appcompat.widget.AppCompatEditText
      android:id="@+id/etMetadata"
      android:layout_below="@+id/tvMetadataHelper"
      android:maxLines="1"
      android:maxLength="100"
      android:paddingStart="@dimen/ism_dp_8"
      android:drawablePadding="@dimen/ism_dp_5"
      android:layout_width="match_parent"
      android:layout_marginEnd="@dimen/ism_dp_60"
      android:layout_marginTop="@dimen/ism_dp_20"
      android:layout_marginStart="@dimen/ism_dp_60"
      android:background="@drawable/ism_metadata_background"
      android:layout_height="@dimen/ism_dp_44"
      tools:ignore="RtlSymmetry"
      android:textColor="@color/ism_black"
      />

  <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/btAddMetadata"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/ism_dp_48"
      android:layout_marginEnd="@dimen/ism_dp_48"
      android:textSize="@dimen/ism_sp_16"
      android:text="@string/ism_add_metadata"
      android:paddingTop="@dimen/ism_dp_12"
      android:paddingBottom="@dimen/ism_dp_10"
      android:layout_marginTop="@dimen/ism_dp_24"
      android:layout_marginBottom="@dimen/ism_dp_30"
      android:textColor="@color/ism_white"
      android:layout_below="@+id/etMetadata"
      android:gravity="center_horizontal"
      android:background="@drawable/ism_request_button"
      android:elevation="@dimen/ism_dp_5"
      />

</RelativeLayout>