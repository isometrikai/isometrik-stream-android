<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/ism_dp_81"
    android:background="@color/ism_black"
    android:layout_height="wrap_content"
    >

  <androidx.appcompat.widget.AppCompatImageView
      android:id="@+id/ivProductImage"
      android:layout_width="@dimen/ism_dp_60"
      android:layout_marginStart="@dimen/ism_dp_13"
      android:layout_marginTop="@dimen/ism_dp_8"
      android:layout_height="@dimen/ism_dp_60"
      app:srcCompat="@drawable/ism_ic_product_default_image" />

  <androidx.appcompat.widget.AppCompatImageView
      android:id="@+id/ivRemoveProduct"
      android:layout_marginEnd="@dimen/ism_dp__4"
      android:layout_marginBottom="@dimen/ism_dp__4"
      android:layout_width="@dimen/ism_dp_20"
      android:background="@drawable/ism_member_select_circle"
      android:layout_height="@dimen/ism_dp_20"
      android:layout_alignEnd="@+id/ivProductImage"
      android:layout_alignBottom="@+id/ivProductImage"
      android:tint="@color/ism_select_member"
      android:padding="@dimen/ism_dp_3"
      app:srcCompat="@drawable/ism_ic_close" />

  <TextView
      android:id="@+id/tvProductName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/ivProductImage"
      android:layout_centerHorizontal="true"
      android:layout_marginBottom="@dimen/ism_dp_8"
      android:layout_marginEnd="@dimen/ism_dp_5"
      android:layout_marginLeft="@dimen/ism_dp_5"
      android:layout_marginRight="@dimen/ism_dp_5"
      android:layout_marginStart="@dimen/ism_dp_5"
      android:layout_marginTop="@dimen/ism_dp_6"
      android:ellipsize="end"
      android:maxLines="1"
      android:singleLine="true"
      android:textColor="@color/ism_white"
      android:text="Product Name"
      android:textSize="@dimen/ism_sp_12" />

</RelativeLayout>