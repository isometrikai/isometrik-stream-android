<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ism_black"
    >

  <RelativeLayout
      android:id="@+id/rlAdmin"
      android:layout_width="@dimen/ism_dp_60"
      android:layout_height="@dimen/ism_dp_28"
      android:layout_alignParentEnd="true"
      android:layout_marginEnd="@dimen/ism_dp_16"
      android:layout_marginTop="@dimen/ism_dp_16"
      android:background="@color/ism_shimmer_grey"
      />

  <TextView
      android:id="@+id/tvModeratorName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="@dimen/ism_dp_13"
      android:layout_marginTop="@dimen/ism_dp_20"
      android:layout_toEndOf="@+id/ivModeratorImage"
      android:layout_toStartOf="@+id/rlAdmin"
      android:background="@color/ism_shimmer_grey"
      android:textSize="@dimen/ism_sp_16"
      />

  <TextView
      android:id="@+id/tvModeratorIdentifier"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/tvModeratorName"
      android:layout_marginEnd="@dimen/ism_dp_13"
      android:layout_marginTop="@dimen/ism_dp_3"
      android:layout_toEndOf="@+id/ivModeratorImage"
      android:layout_toStartOf="@+id/rlAdmin"
      android:background="@color/ism_shimmer_grey"
      android:textSize="@dimen/ism_sp_14"
      />

  <View
      android:layout_width="match_parent"
      android:layout_height="@dimen/ism_dp_1"
      android:layout_below="@id/tvModeratorIdentifier"
      android:layout_marginStart="@dimen/ism_dp_80"
      android:layout_marginTop="@dimen/ism_dp_13"
      android:background="@color/ism_line_gray"
      />


  <androidx.appcompat.widget.AppCompatImageView
      android:id="@+id/ivModeratorImage"
      android:layout_width="@dimen/ism_dp_60"
      android:layout_height="@dimen/ism_dp_60"
      android:layout_marginEnd="@dimen/ism_dp_13"
      android:layout_marginStart="@dimen/ism_dp_16"
      android:layout_marginTop="@dimen/ism_dp_13"
      android:layout_marginBottom="@dimen/ism_dp_13"
      app:srcCompat="@drawable/ism_default_profile_image"
      app:tint="@color/ism_shimmer_grey"
      />

</RelativeLayout>