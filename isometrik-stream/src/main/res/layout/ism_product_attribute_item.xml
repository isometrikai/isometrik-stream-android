<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ism_product_attribute_background"
    android:layout_margin="@dimen/ism_dp_5"
    android:minWidth="@dimen/ism_dp_60"
    android:id="@+id/rlAttributeBackground"
    >

  <TextView
      android:id="@+id/tvAttributeName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:padding="@dimen/ism_dp_8"
      android:ellipsize="end"
      android:maxLines="1"
      android:singleLine="true"
      android:text="Blue"
      android:layout_centerInParent="true"
      android:textColor="@color/ism_product_attribute_background_selector"
      android:textSize="@dimen/ism_sp_16"
      />

</RelativeLayout>